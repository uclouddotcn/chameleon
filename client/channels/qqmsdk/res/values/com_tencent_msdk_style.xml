<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
   <style name="layout_fix">  
    <item name="android:layout_width">200dp</item>  
    <item name="android:layout_height">300dp</item>  
  </style>
<!-- 全屏幕拉伸-->
  <style name="layout_full">  
    <item name="android:layout_width">fill_parent</item>  
    <item name="android:layout_height">fill_parent</item>  
  </style>
   
<!-- 固定自身大小-->
  <style name="layout_wrap">  
    <item name="android:layout_width">wrap_content</item>  
    <item name="android:layout_height">wrap_content</item>  
  </style>
 
<!-- 横向分布-->
  <style name="layout_horizontal" parent="layout_full">  
    <item name="android:layout_width">0px</item>  
  </style> 
    
<!-- 纵向分布-->
  <style name="layout_vertical" parent="layout_full">  
    <item name="android:layout_height">0px</item>  
  </style> 
  
    <style name="DialogBase" parent="@android:style/Theme.Dialog">
        <item name="android:windowShowWallpaper">false</item>
    </style>
    <style name="CallActivityAnimationNone" parent="android:Animation">
        <item name="android:windowEnterAnimation">@null</item>
        <item name="android:windowExitAnimation">@null</item>
    </style>
    <style name="PopupNoticeActivity" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@drawable/transparent</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowShowWallpaper">false</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
    </style>        
    <style name="AppBaseTheme" parent="android:Theme.Light">
    </style>
    <style name="AppTheme" parent="AppBaseTheme">
         <item name="android:textSize">18px</item>
    </style>
    
    
    <style name="NoticeAlertTheme" parent="@android:style/Theme.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/transparent</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowShowWallpaper">false</item>
    </style>
    
    <!-- 浏览器 style S-->
    <style name="shareInputAnimationStyle" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/thrdcall_more_dialog_enter</item>
        <item name="android:windowExitAnimation">@anim/thrdcall_more_dialog_exit</item>
    </style>

    <style name="thrdcall_more_text" parent="@android:style/Widget.TextView">
        <item name="android:clickable">true</item>
        <item name="android:textColor">@color/thrdcall_white</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:shadowColor">@color/thrdcall_more_text_shadow_color</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">2</item>
        <item name="android:shadowRadius">2</item>
        <item name="android:textSize">@dimen/thrdcall_more_text_size</item>
        <item name="android:drawablePadding">@dimen/thrdcall_more_text_leftmargin</item>
        <item name="android:background">@drawable/thrdcall_more_item_bkg</item>
        <item name="android:paddingLeft">@dimen/thrdcall_more_text_leftmargin</item>
        <item name="android:paddingRight">@dimen/thrdcall_more_text_leftmargin</item>
    </style>

    <style name="ThrdCallActivityAnimationNone" parent="android:Animation">
        <item name="android:windowEnterAnimation">@null</item>
        <item name="android:windowExitAnimation">@null</item>
    </style>

    <style name="ThrdCallActivityAnimationOut" parent="android:Animation">
        <item name="android:windowEnterAnimation">@null</item>
        <item name="android:windowExitAnimation">@anim/thrdcall_activity_push_out</item>
    </style>

    <style name="ThrdCallActivity" parent="@android:style/Theme.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/thrdcall_transparent</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowShowWallpaper">false</item>
        <item name="android:windowAnimationStyle">@style/ThrdCallActivityAnimationIn</item>
    </style>

    <style name="ThrdCallActivityAnimationIn" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/thrdcall_activity_push_in</item>
        <item name="android:windowExitAnimation">@null</item>
    </style>
    <!-- 浏览器 style E-->
</resources>