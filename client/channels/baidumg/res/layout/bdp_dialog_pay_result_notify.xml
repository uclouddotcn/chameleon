<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bdp_paycenter_bg_dialog_alert"
    android:orientation="vertical" >
    
    <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="5dip"
        android:paddingRight="5dip"
        android:paddingTop="5dip"
        android:paddingBottom="7dip"
        android:text="@string/bdp_paycenter_pay_result_notify_title"
        android:textColor="@color/bdp_dark_gray"
        android:textSize="16sp"
        />
    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:layout_marginBottom="4dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/bdp_paycenter_dialog_dot_bg"
        android:contentDescription="@string/bdp_image" />
    
	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:paddingLeft="8dip"
	    android:paddingRight="8dip"
	    android:paddingTop="20dip"
	    android:paddingBottom="10dip"
	    android:gravity="center"
	    android:orientation="vertical">
	    
	    <LinearLayout 
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginBottom="20dip"
	        android:gravity="center"
	        android:orientation="horizontal">
	        
	        <!-- icon -->
	        <ImageView 
	            android:id="@+id/img_icon"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:paddingRight="20dip"
	            android:contentDescription="@string/bdp_image"
	            android:src="@drawable/bdp_icon_pay_result_success"
	            />
	        
	        <LinearLayout 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:orientation="vertical">
	            
	            <!-- 结果类型 -->
	            <TextView 
	                android:id="@+id/txt_type"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_marginBottom="5dip"
	                android:text="@string/bdp_paycenter_pay_result_notify_submit"
	                android:textColor="@color/bdp_dark_gray"
	                android:textSize="18sp"
	                />
	            
	            <!-- 提示文字 -->
	            <TextView 
	                android:id="@+id/txt_tip"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:text="@string/bdp_paycenter_pay_result_notify_fail_cancel_tip"
	                android:textColor="@color/bdp_deep_gray"
	                android:textSize="14sp"
	                />
	        </LinearLayout>
	    </LinearLayout>
	    
	    <!-- 返回游戏按钮 -->
	    <Button 
	        android:id="@+id/btn_back"
	        android:layout_width="match_parent"
	        android:layout_height="40dip"
	        android:text="@string/bdp_paycenter_pay_result_notify_return"
	        android:textColor="@color/bdp_white"
	        android:background="@drawable/bdp_btn_blue_selector"
	        />
	</LinearLayout>
</LinearLayout>
