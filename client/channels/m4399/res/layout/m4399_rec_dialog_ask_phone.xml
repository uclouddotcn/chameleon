<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/m4399_rec_dialog_width"
    android:layout_height="wrap_content"
    android:background="@drawable/m4399_dialog_bg"
    android:orientation="vertical"
    android:padding="0dp" >

    <TextView
        android:id="@+id/ask_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/m4399_rec_title_height"
        android:layout_gravity="center"
        android:layout_marginTop="12dp"
        android:gravity="center"
        android:text="@string/m4399_rec_call_phone_tips"
        android:textColor="@color/m4399_rec_color_white"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tel_number"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="@string/m4399_rec_hotline_4399"
        android:textColor="#ffffff"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingBottom="16dp"
        android:paddingLeft="@dimen/m4399_rec_paddingLeft"
        android:paddingRight="@dimen/m4399_rec_paddingRight" >

        <Button
            android:id="@+id/not_now"
            android:layout_width="0dp"
            android:layout_height="@dimen/m4399_rec_sum_btns_eara_height"
            android:layout_marginRight="3dp"
            android:layout_weight="1"
            android:background="@drawable/m4399_rec_white_btn_bg"
            android:text="@string/m4399_rec_call_cancel"
            android:textColor="#333333" />

        <Button
            android:id="@+id/call_now"
            android:layout_width="0dp"
            android:layout_height="@dimen/m4399_rec_sum_btns_eara_height"
            android:layout_marginLeft="3dp"
            android:layout_weight="1"
            android:background="@drawable/m4399_rec_green_btn_bg"
            android:text="@string/m4399_rec_call_ok"
            android:textColor="#ffffff" />
    </LinearLayout>

</LinearLayout>